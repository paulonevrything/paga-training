			<object name="view" />
			<object name="procedures" />
			<object name="triggers" />
			<object name="model" />
			<object name="mapping" />
		</excludeObjects>
	</table>

	<table recreateTable="true" name="User" type="Entity">
		<fields>
			<field fieldName="FirstName" dataType="varchar(50)" isNull="false" default="" />
			<field fieldName="LastName" dataType="nvarchar(50)" isNull="false" default="" />
			<field fieldName="Username" dataType="nvarchar(255)" isNull="false" default="" />
		</fields>
		<features>
			<feature name="Audit" />
		</features>
		<relationships>
		</relationships>
	</table>

